                    window.location.href = '@Url.Action("HomePage", "Home")';
                });

                // Đảm bảo chỉ chuyển hướng khi nhấn "OK"
                $('#confirmLogout').on('click', function () {
                    $('#LogoutSuccessModal').modal('hide'); // Đóng Modal
                });

                // var loginResponse = JSON.parse(localStorage.getItem('loginResponse'));
                // var maPhong = loginResponse?.user?.maPhong; 

                // if (maPhong) {
                //     $('#maPhongLabel').text(maPhong);
                // } else {
                //     $('#maPhongLabel').text('Không tìm thấy mã phòng');
                // }

                 var loginResponse = JSON.parse(localStorage.getItem('loginResponse'));
                var maPhong = loginResponse?.user?.maPhong; 

                if (maPhong) {
                    $('#maPhongLabel').text(maPhong);
                } else {
                    $('#maPhongLabel').text('Không tìm thấy mã phòng');
                }


              function loadPhieuThus(maPhong, startDate, endDate, trangThai, pageSize = 5) {
                    $.ajax({
                        url: `@apiBaseUrl/api/PhieuThus/GetThongTinPhieuThuBy_MaPhong?maPhong=${maPhong}&startDate=${startDate}&endDate=${endDate}&trangThai=${trangThai}&pageNumber=${currentPage}&pageSize=${pageSize}`,
                        type: 'GET',
                        headers: {
                            'Authorization': 'Bearer ' + loginResponse.token
                        },
                        success: function (response) {
                            if (response.isSuccess) {
                                 totalPages = response.totalPages; // Lưu tổng số trang từ phản hồi API
                                   // Cập nhật pagination
                                updatePagination();
                                var phieuThus = response.phieuthus;



                                phieuThus.sort(function (a, b) {
                                    return new Date(b.ngayLap) - new Date(a.ngayLap);
                                });

                                $('tbody').empty(); // Xóa tất cả các hàng trong tbody

                                phieuThus.forEach(function (phieuThu) {
                                    var trangThaiClass = phieuThu.trangThai ? 'text-success' : 'text-danger';
                                    var trangThaiText = phieuThu.trangThai ? 'Đã thanh toán' : 'Chưa thanh toán';

                                    // Kiểm tra nếu trường nào null thì thay thế bằng 'Trống' và thêm màu đỏ
                                    var checkNull = function(value) {
                                        return value ? value : '<span style="color:red;">Trống</span>';
                                    };

                                    // Định dạng tiền với dấu chấm ngăn cách hàng nghìn
                                    var formatCurrency = function(value) {
                                        return value ? value.toLocaleString('vi-VN') : '<span style="color:red;">Trống</span>';
                                    };



                                    // // Nếu phiếu thu đã thanh toán, làm nút bị khóa
                                    // var buttonDisabled = phieuThu.trangThai ? 'disabled' : '';
                                    // var buttonClass = phieuThu.trangThai ? 'btn-secondary' : 'btn-primary';

                                      // Nếu phiếu thu đã thanh toán, làm nút bị khóa
                                    var buttonDisabled = phieuThu.trangThai ? 'disabled' : '';
                                    var buttonClass = phieuThu.trangThai ? 'btn-secondary' : 'btn-primary';

                                    // Kiểm tra nếu tongTien là null hoặc không tồn tại
                                    var isTongTienValid = phieuThu.tongTien != null && phieuThu.tongTien > 0; // Chỉ cho phép thanh toán nếu có tổng tiền
                                    var paymentButtonDisabled = !isTongTienValid || phieuThu.trangThai ? 'disabled' : '';



                                    var newRow = `
                                        <tr>
                                            <th scope="row">${checkNull(phieuThu.maPt)}</th>
                                            <td>${checkNull(phieuThu.ngayLap)}</td>
                                            <td>${checkNull(phieuThu.ngayThu)}</td>
                                            <td>${formatCurrency(phieuThu.tienNha)}</td>
                                            <td>${checkNull(phieuThu.dienCu)}</td>
                                            <td>${checkNull(phieuThu.dienMoi)}</td>
                                            <td>${formatCurrency(phieuThu.tienDien)}</td>
                                            <td>${checkNull(phieuThu.nuocCu)}</td>
                                            <td>${checkNull(phieuThu.nuocMoi)}</td>
                                            <td>${formatCurrency(phieuThu.tienNuoc)}</td>
                                            <td>${formatCurrency(phieuThu.tienDv)}</td>
                                            <td>${formatCurrency(phieuThu.tongTien)}</td>
                                            <td>${formatCurrency(phieuThu.thanhToan)}</td>
                                            <td class="${trangThaiClass}">${trangThaiText}</td>
                                            <td>
                                                <button type="button" style="width: 160px;" class="btn ${buttonClass}" ${buttonDisabled} 
                                                        data-toggle="modal" data-target="#exampleModal" 
                                                        ${buttonDisabled ? 'onclick="alert(\'Phiếu thu này đã được thanh toán, không thể cập nhật.\');"' : ''}>
                                                    Nhập Điện Nước
                                                </button>
                                            </td>
                                            <td>
                                                <button type="button" style="width: 130px;" class="btn btn-success" ${paymentButtonDisabled} 
                                                        data-toggle="modal" data-target="#paymentModal">
                                                    Thanh Toán
                                                </button>
                                            </td>   

                                         
                                        </tr>
                                    `;
                                    $('tbody').append(newRow);
                                });
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function (xhr) {
                            // alert('Đã xảy ra lỗi khi lấy dữ liệu: ' + xhr.responseJSON.message);
                             // alert(' Không có thông tin phiếu thu tương ứng  ');
                                $('#filterModal').modal('show');
                        }
                    });
                }



                // Khai báo biến để lưu số dòng hiển thị
                    var currentRowsPerPage = 5; // Giá trị mặc định là 10

                  function updatePagination() {
                    $('#pagination').empty(); // Xóa tất cả các trang hiện tại

                    // Previous button
                    if (currentPage > 1) {
                        $('#pagination').append(`
                            <li class="page-item" id="prevPage">
                                <a class="page-link" href="#" tabindex="-1">Trước đó</a>
                            </li>
                        `);
                    } else {
                        $('#pagination').append(`
                            <li class="page-item disabled" id="prevPage">
                                <a class="page-link" href="#" tabindex="-1">Trước đó</a>
                            </li>
                        `);
                    }

                    // Current page button
                    $('#pagination').append(`
                        <li class="page-item active" aria-current="page" id="currentPage">
                            <a class="page-link" href="#">${currentPage} / ${totalPages}</a>
                        </li>
                    `);

                    // Next button
                    if (currentPage < totalPages) {
                        $('#pagination').append(`
                            <li class="page-item" id="nextPage">
                                <a class="page-link" href="#">Tiếp theo</a>
                            </li>
                        `);
                    } else {
                        $('#pagination').append(`
                            <li class="page-item disabled" id="nextPage">
                                <a class="page-link" href="#">Tiếp theo</a>
                            </li>
                        `);
                    }


                    // Gán sự kiện cho nút Previous
                    $('#prevPage').off('click').on('click', function () {
                        if (currentPage > 1) {
                            currentPage--;
                            loadPhieuThus(maPhong,'', '', '', currentRowsPerPage); // Gọi lại dữ liệu
                        }
                    });

                       // Gán sự kiện cho nút Next
                    $('#nextPage').off('click').on('click', function () {
                        if (currentPage < totalPages) {
                            currentPage++;
                            loadPhieuThus(maPhong,'', '', '', currentRowsPerPage); // Gọi lại dữ liệu
                        }
                    });


                      // Thêm combo box cho số dòng hiển thị vào cuối
                    $('#pagination').append(`
                        <li class="page-item" id="rowsPerPageItem">
                            <select name="phantrangFeedback" class="form-control" id="feedbackRowsPerPageSelect" style="margin: 0px 10px 0px 10px;">
                                <option value="5" disabled>Số dòng</option> <!-- Lựa chọn mặc định -->
                                <option value="5" ${currentRowsPerPage == 5 ? 'selected' : ''}>5</option>
                                <option value="10" ${currentRowsPerPage == 10 ? 'selected' : ''}>10</option>
                                <option value="15" ${currentRowsPerPage == 15 ? 'selected' : ''}>15</option>
                            </select>
                        </li>
                    `);



                      // Gán sự kiện thay đổi cho combo box số dòng hiển thị
                    $('#feedbackRowsPerPageSelect').on('change', function () {
                        currentRowsPerPage = parseInt($(this).val()); // Lấy số dòng hiển thị từ select và chuyển đổi thành số nguyên
                        currentPage = 1; // Đặt lại currentPage về 1 mỗi khi thay đổi số dòng
                        loadPhieuThus(maPhong,'', '', '', currentRowsPerPage); // Gọi lại dữ liệu với số dòng mới
                    });

                }

                 // Gọi API lần đầu tiên khi load trang
                loadPhieuThus(maPhong,'', '', '', 5); // Mặc định là 10 dòng hiển thị



                  // Gán sự kiện cho nút "Ok" trong filterModal
                $('#filterModalOk').off('click').on('click', function () {
                    $('#filterModal').modal('hide');
                });

                function showQrCodeModal() {
                    $('#paymentModal').modal('show');
                }

                // // Gọi API lần đầu tiên khi load trang
                // loadPhieuThus(maPhong, '', '', '');

                // Lắng nghe sự kiện nhấn nút lọc
                $('#filterButton').on('click', function () {
                    var startDate = $('#startDate').val();
                    var endDate = $('#endDate').val();
                    var trangThai = $('#trangThaiSelect').val(); // Lấy giá trị từ dropdown trạng thái

                    loadPhieuThus(maPhong, startDate, endDate, trangThai);
                });

                // Lắng nghe sự kiện nhấn nút làm mới
                $('#refeshButton').on('click', function () {
                    // Gọi API lần đầu tiên khi load trang
                    loadPhieuThus(maPhong, '', '', '');

                     // Đặt lại giá trị của các trường ngày
                    $('#startDate').val('2024-01-01');
                    $('#endDate').val('2024-12-31');

                    $('#trangThaiSelect').val('');

                       // Cập nhật lại phân trang
                   currentPage = 1; // Đặt lại currentPage về 1 mỗi khi thay đổi số dòng
                    currentRowsPerPage = 5; // Đặt lại số dòng hiển thị về 5
                    updatePagination(); // Gọi lại hàm cập nhật phân trang
                });



                // Sự kiện nhấn vào nút "Thanh Toán"
                $(document).on('click', '.btn-success[data-target="#paymentModal"]', function () {
                    var row = $(this).closest('tr');
                    var maPt = row.find('th').text(); 
                    var tongTien = row.find('td:nth-child(12)').text(); // Cột chứa tổng tiền thanh toán
                    var tenKhachHang = "HOANG VAN TRI"; // Cần thay đổi để lấy tên khách hàng từ dữ liệu thực tế

                    // Cập nhật thông tin trong modal
                    $('#paymentInfo').html(`  <strong>Mã phiếu thu :</strong> ${maPt} <br>  <strong>Số tiền thanh toán :</strong> ${tongTien} VND`);

                    // Hiển thị modal
                    $('#paymentModal').modal('show');
                });




                // Sự kiện nhấn vào nút "Nhập Điện Nước"
                $(document).on('click', '.btn-primary[data-target="#exampleModal"]', function () {
                    var row = $(this).closest('tr'); 
                    var maPt = row.find('th').text(); 
                    var dienMoi = row.find('td:nth-child(6)').text(); 
                    var nuocMoi = row.find('td:nth-child(9)').text();

                    $('#maPtInput').val(maPt);

                    if (dienMoi !== 'Trống') {
                        $('#dienMoiInput').val(dienMoi);
                    } else {
                        $('#dienMoiInput').val('');
                    }

                    if (nuocMoi !== 'Trống') {
                        $('#nuocMoiInput').val(nuocMoi);
                    } else {
                        $('#nuocMoiInput').val('');
                    }
                });

                // Sự kiện nhấn vào nút "Cập nhật" trong Modal
                $('#btnCapNhat').on('click', function () {
                    var maPt = $('#maPtInput').val(); 
                    var dienMoi = $('#dienMoiInput').val();
                    var nuocMoi = $('#nuocMoiInput').val(); 

                    $.ajax({
                        url: `@apiBaseUrl/api/PhieuThus/UpdatePhieuThu?maPt=${maPt}&dienMoi=${dienMoi}&nuocMoi=${nuocMoi}`,
                        type: 'PUT',
                        headers: {
                            'Authorization': 'Bearer ' + loginResponse.token 
                        },
                       success: function (response) {
                        if (response.isSuccess) {
                            // Ẩn modal exampleModal
                            $('#exampleModal').modal('hide'); 

                            // Hiển thị modal thông báo cập nhật thành công
                            $('#successModal').modal('show'); // Mở modal thông báo

                            // Sự kiện nhấn vào nút "Ok" trong successModal
                            $('#successModal .btn-primary').on('click', function () {
                                location.reload(); // Tải lại trang khi nhấn Ok
                            });

                        } else {
                            alert(response.message);
                        }
                    },
                        error: function (xhr) {
                            alert('Đã xảy ra lỗi khi cập nhật phiếu thu: ' + xhr.responseJSON.message);
                        }
                    });
                });
            });
        </script>




