                                            var today = new Date(); // Lấy ngày hiện tại
                                            var diffDays = Math.floor((today - ngayLap) / (1000 * 60 * 60 * 24)); // Tính số ngày chênh lệch

                                            if (phieuThu.trangThai) {
                                                // Đã thanh toán
                                                trangThaiClass = 'text-success';
                                                trangThaiText = 'Đã thanh toán';
                                            } else if (diffDays <= 5) {
                                                // Chưa thanh toán trong vòng 5 ngày
                                                trangThaiClass = 'text-warning';
                                                trangThaiText = 'Chưa thanh toán';
                                            } else {
                                                // Quá 5 ngày và chưa thanh toán
                                                trangThaiClass = 'text-danger';
                                                trangThaiText = 'Chưa thanh toán';
                                            }

                                            // Kiểm tra nếu trường nào null thì thay thế bằng 'Trống' và thêm màu đỏ
                                            var checkNull = function (value) {
                                                return value ? value : '<span style="color:red;">Trống</span>';
                                            };

                                            // Định dạng tiền với dấu chấm ngăn cách hàng nghìn
                                            var formatCurrency = function (value) {
                                                return value ? value.toLocaleString('vi-VN') : '<span style="color:red;">Trống</span>';
                                            };


                                            // Nếu phiếu thu đã thanh toán hoặc có tổng tiền, làm nút "Nhập Điện Nước" bị khóa
                                            var buttonDisabled = phieuThu.trangThai || (phieuThu.tongTien != null && phieuThu.tongTien > 0) ? 'disabled' : '';
                                            var buttonClass = phieuThu.trangThai || (phieuThu.tongTien != null && phieuThu.tongTien > 0) ? 'btn-secondary' : 'btn-primary';

                                            // Nếu phiếu thu đã có tổng tiền hợp lệ và chưa thanh toán, cho phép thanh toán
                                            var isTongTienValid = phieuThu.tongTien != null && phieuThu.tongTien > 0;
                                            var paymentButtonDisabled = !isTongTienValid || phieuThu.trangThai ? 'disabled' : '';



                                            var newRow = `
