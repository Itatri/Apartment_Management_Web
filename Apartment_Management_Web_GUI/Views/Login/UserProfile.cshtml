                    });
                } else {
                    console.log('Không thể tìm thấy mã khách trọ.');
                }
            });


            // Sự kiện click cho nút "Kê khai thông tin khách mới"
            $('#keKhaiKhachMoiBtn').on('click', function () {
             
                $('#danhSachCuDan').hide();

                
                $('#chiTietCuDan').show();

              
                resetChiTietCuDan(); 
            });



            // Sự kiện click cho nút quay lại
            $(document).on('click', '.btn-image', function () {
              
                $('#chiTietCuDan').hide();

                
                $('#danhSachCuDan').show();

              
                location.reload(); 
            });



            // Sự kiện nhấn nút Lưu thông tin 
            $(".profile-button").click(function (event) {
                event.stopPropagation(); 

                const maKhachTro = $("#hiddenMaKhachTro").val();
                const hoTen = $("input[placeholder='Nhập họ tên']").val();
                const gioiTinh = $("select[name='gioiTinh']").val();
                const ngaySinh = $("#datepicker").val(); 
                const soDienThoai = $("input[placeholder='Nhập số điện thoại']").val();
                const email = $("input[placeholder='Nhập email']").val();
                const phong = $("input[placeholder='Thông tin phòng']").val();
      
                const quanHe = $("#selectQuanHe").val();

                const soCCCD = $("input[placeholder='Nhập số căn cước']").val();
                const noiCap = $("input[placeholder='Nhập nơi cấp']").val();
                const thuongTru = $("input[placeholder='Nhập nơi thường trú']").val();
                const queQuan = $("select[name='queQuan']").val();
                const ngayCap = $("#datepicker_ngaycap").val(); 
                const chuKyFile = $("#chuKyInput").prop('files')[0];
              
                const trangThai = 1; 

                 
                 // Kiểm tra dữ liệu nhập
                let errors = [];
                if (!hoTen) errors.push("Họ tên.");
                if (!gioiTinh) errors.push("Giới tính");
                if (!ngaySinh) errors.push("Ngày sinh");
                if (!soDienThoai) errors.push("Số điện thoại");
                if (!email) errors.push("Email");
                if (!quanHe) errors.push("Quan hệ");
                if (!soCCCD) errors.push("Số căn cước");
                if (!noiCap) errors.push("Nơi cấp");
                if (!thuongTru) errors.push("Nơi thường trú");
                if (!queQuan) errors.push("Quê quán");
                if (!ngayCap) errors.push("Ngày cấp");

                // Kiểm tra nếu là "Chủ hộ", phải trên 18 tuổi
                if (quanHe === "Chủ hộ") {
                    const birthDate = new Date(ngaySinh); 
                    const today = new Date();
                    const age = today.getFullYear() - birthDate.getFullYear();
                    const m = today.getMonth() - birthDate.getMonth();
                    if (m < 0 || (m === 0 && today.getDate() < birthDate.getDate())) {
                        age--; 
                    }

                    if (age < 18) {
                        errors.push("Chủ hộ phải trên 18 tuổi.");
                    }
                }

                if (errors.length > 0) {
                    let errorMessage = "Vui lòng nhập đầy đủ và chính xác các thông tin: <br>" + `<ul style="color: red;">${errors.map(e => `<li>${e}</li>`).join("")}</ul>`;
                    $("#errorModal .modal-body").html(errorMessage);
                    $("#errorModal").modal('show');
                    return; 
                }

              

                $.ajax({
                    url: `@apiBaseUrl/api/ThongTinKhaches/CheckRoomHasOwner?maPhong=${phong}&quanHe=${quanHe}&isUpdating=${maKhachTro ? true : false}`,
                    type: 'GET',
                    headers: {
                        'Authorization': 'Bearer ' + loginResponse.token
                    },
                    success: function (response) {
                        if (!response) {
                            console.error("Không có phản hồi từ API");
                            return;
                        }

                        if (!response.isSuccess) {
                            $("#errorModal .modal-body").html(response.message);
                            $("#errorModal").modal('show');
                            return;
                        }

                        // Tiếp tục lưu thông tin nếu không có lỗi
                        const data = {
                            HoTen: hoTen,
                            GioiTinh: gioiTinh,
                            NgaySinh: ngaySinh,
                            Phone: soDienThoai,
                            Email: email,
                            MaPhong: phong,
                            QuanHe: quanHe,
                            CCCD: soCCCD,
                            NoiCap: noiCap,
                            ThuongTru: thuongTru,
                            QueQuan: queQuan,
                            NgayCap: ngayCap,
                            TrangThai: trangThai
                        };

                        if (chuKyFile) {
                            data.ChuKy = chuKyFile.name;
                        }

                        const url = maKhachTro
                            ? `@apiBaseUrl/api/ThongTinKhaches/UpdateThongTinKhach?maKhachTro=${maKhachTro}`
                            : '@apiBaseUrl/api/ThongTinKhaches/CreateThongTinKhach';

                        const method = maKhachTro ? 'PUT' : 'POST';

                        $.ajax({
                            url: url,
                            type: method,
                            contentType: 'application/json',
                            headers: {
                                'Authorization': 'Bearer ' + loginResponse.token
                            },
                            data: JSON.stringify(data),
                            success: function (response) {
                                const modalId = maKhachTro ? "#successUpdateModal" : "#successCreateModal";
                                $(modalId).modal('show');
                                console.log(response);

                                if (chuKyFile) {
                                    const maKhachTroMoi = maKhachTro || response.khachs[0].maKhachTro;
                                    uploadChuKy(maKhachTroMoi, hoTen, chuKyFile);
                                }
                            },
                            error: function (xhr, status, error) {
                                alert(maKhachTro ? "Cập nhật thông tin thất bại!" : "Tạo mới khách thất bại!");
                                console.error(xhr.responseText);
                            }
                        });
                    },
                    error: function (xhr, status, error) {
                        alert("Lỗi kiểm tra phòng.");
                        console.error(xhr.responseText);
                    }
                });


                // Gọi API Upload chữ ký 
                function uploadChuKy(maKhachTro, hoTen, chuKyFile) {
                    if (chuKyFile) {
                        const formData = new FormData();
                        formData.append("file", chuKyFile); 
                        formData.append("maKhachTro", maKhachTro); 
                        formData.append("hoTen", hoTen);

                        
                        $.ajax({
                            url: '@apiBaseUrl/api/ThongTinKhaches/Upload', 
                            type: 'POST',
                            data: formData,
                            headers: {
                                'Authorization': 'Bearer ' + loginResponse.token
                            },
                            processData: false,
                            contentType: false,
                            success: function (uploadResponse) {
                                console.log("Tải ảnh chữ ký lên thành công!");
                                console.log(uploadResponse);

                                // Hiển thị ảnh chữ ký
                                $('.img-chuky').attr('src', @imageBaseUrl + 'ChuKy/' + 'CK_' + maKhachTro + '_' + hoTen + '.jpeg').on('error', function () {
                                    $(this).attr('src', '/images/signature.png'); 
                                });
                            },
                            error: function (uploadError) {
                                console.log("Tải ảnh chữ ký lên thất bại!");
                                console.error(uploadError.responseText);
                            }
                        });
                    } else {
                        console.log("Không có tệp chữ ký để tải lên.");
                    }
                }
            });





            // Reload trang khi nhấn nút Ok

            $('#successCreateModal .btn-primary').click(function () {
                location.reload();
            });

            $('#successUpdateModal .btn-primary').click(function () {
                location.reload();
            });



            // Hàm đặt lại tất cả các trường trong chi tiết cư dân
            function resetChiTietCuDan() {
                $('input[placeholder="Nhập họ tên"]').val('');
                $('select[name="gioiTinh"]').val('');
               
                $('input[placeholder="Chọn ngày sinh"]').val('');
                $('input[placeholder="Nhập số điện thoại"]').val('');
                $('input[placeholder="Nhập email"]').val('');
                $('input[placeholder="Thông tin phòng"]').val(maPhong); 
                $('select[name="quanHe"]').val('');
                $('input[placeholder="Nhập số căn cước"]').val('');
                $('input[placeholder="Nhập nơi cấp"]').val('');
                $('input[placeholder="Nhập nơi thường trú"]').val('');
                $('select[name="queQuan"]').val('');
              
                $('input[placeholder="Chọn ngày cấp"]').val('');
                $('select[name="trangThaiKhach"]').val('');


                // Reset hình chữ ký
                $('.img-chuky').attr('src', '/images/signature.png'); 
                $('#chuKyName').text('');
                $('#chuKyInput').val(''); 
            }



             //  API để gửi email
            $('#emailForm').on('submit', function (e) {
                e.preventDefault(); 

                var toEmail = $('#toEmail').val();

                
                $.ajax({
                    url: '@apiBaseUrl/api/Mails/send?toEmail=' + encodeURIComponent(toEmail),
                    type: 'POST',
                    success: function (response) {
                      
                        $('#SendEmailSuccessModal').modal('show');
                    },
                    error: function (xhr) {
                        alert('Có lỗi xảy ra: ' + xhr.responseJSON.title); 
                    }
                });
            });

          

            // Sự kiện hiển thị khi chọn ảnh chữ ký

            $(document).on('click', '.add-experience', function () {
                $('#chuKyInput').click();
            });

            
            $('#chuKyInput').on('change', function () {
                const file = $(this).prop('files')[0]; 
                if (file) {
                    const reader = new FileReader();

                    reader.onload = function (e) {
                        
                        $('.img-chuky').attr('src', e.target.result).on('error', function () {
                            $(this).attr('src', '/images/signature.png');
                        });
                    };

                    reader.readAsDataURL(file); 
                }
            });
             loadQuanHe();
             loadProvinces(); 
        });


    </script>




