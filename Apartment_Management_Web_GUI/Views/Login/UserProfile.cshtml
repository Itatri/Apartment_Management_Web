     <script>
            $(document).ready(function () {
                // Lấy thông tin loginResponse từ localStorage
                var loginResponse = JSON.parse(localStorage.getItem('loginResponse'));

                // Kiểm tra xem loginResponse có tồn tại hay không
                if (loginResponse) {
                    var user = loginResponse.user;

                    // Hiển thị userId nếu có
                    if (user?.id) {
                        $('#userIdDisplay').text(user.id);
                    }

                    // Các thông tin khác từ loginResponse, nếu cần hiển thị
                    console.log('Token:', loginResponse.token);
                    console.log('User:', user);
                    console.log('Mã phòng:', user?.maPhong);
                    console.log('Trạng thái:', user?.trangThai);
                }

                // Xử lý sự kiện nhấn vào nút Đăng xuất
                $('#logoutBtn').on('click', function () {
                    localStorage.removeItem('loginResponse');
                    console.log('loginResponse:', localStorage.getItem('loginResponse'));
                    window.location.href = '@Url.Action("HomePage", "Home")';
                });

                var loginResponse = JSON.parse(localStorage.getItem('loginResponse'));
                var maPhong = loginResponse?.user?.maPhong; 

                if (maPhong) {
                    $('#maPhongLabel').text(maPhong);
                } else {
                    $('#maPhongLabel').text('Không tìm thấy mã phòng');
                }

              if (maPhong) {
                // Gọi API để lấy thông tin phiếu thu
                $.ajax({
                    url: `https://localhost:7298/api/FeedBacks/GetThongTinFeedbackBy_MaPhong?maPhong=${maPhong}`,
                    type: 'GET',
                    headers: {
                        'Authorization': 'Bearer ' + loginResponse.token
                    },
                    success: function (response) {
                        if (response.isSuccess) {
                            var feedBacks = response.feedBacks;
                            feedBacks.sort(function (a, b) {
                                return new Date(b.ngayGui) - new Date(a.ngayGui);
                            });

                            $('tbody').empty(); // Xóa tất cả các hàng trong tbody

                            feedBacks.forEach(function (Feedback) {
                                var trangThaiClass = Feedback.trangThai ? 'text-success' : 'text-danger';
                                var trangThaiText = Feedback.trangThai ? 'Đã trả lời' : 'Chưa trả lời';

                                // Kiểm tra nếu trường nào null thì thay thế bằng 'Chưa có' và thêm màu đỏ
                                var checkNull = function(value) {
                                    return value ? value : '<span style="color:red;">Trống</span>';
                                };

                                // Hàm định dạng lại ngày thành HH:mm dd/MM/yyyy
                                var formatDate = function(dateStr) {
                                    if (!dateStr) return '<span style="color:red;">Trống</span>';
                                    var date = new Date(dateStr);
                                    var day = String(date.getDate()).padStart(2, '0');
                                    var month = String(date.getMonth() + 1).padStart(2, '0'); // Tháng bắt đầu từ 0
                                    var year = date.getFullYear();
                                    var hours = String(date.getHours()).padStart(2, '0');
                                    var minutes = String(date.getMinutes()).padStart(2, '0');
                                    return `${hours}:${minutes} ${day}/${month}/${year}`;
                                };

                                var newRow = `
                                    <tr>
                                       <th scope="row" class="hidden-column">${checkNull(Feedback.maFb)}</th> <!-- Thêm class để ẩn cột -->
                                        <td>${checkNull(Feedback.moTa)}</td>
                                        <td>${formatDate(Feedback.ngayGui)}</td> <!-- Định dạng ngày gửi -->
                                        <td class="text-success">${checkNull(Feedback.phanHoi)}</td>
                                        <td>${formatDate(Feedback.ngayPhanHoi)}</td> <!-- Định dạng ngày phản hồi -->
                                        <td class="${trangThaiClass}">${trangThaiText}</td>
                                    </tr>
                                `;
                                $('tbody').append(newRow);
                            });
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function (xhr) {
                        alert('Đã xảy ra lỗi khi lấy dữ liệu: ' + xhr.responseJSON.message);
                    }
                });
            } else {
                alert('Không tìm thấy mã phòng trong localStorage.');
            }


               // Khi modal mở, tự động điền mã phòng vào trường dữ liệu Phòng
                $('#exampleModal').on('show.bs.modal', function (event) {
                    var loginResponse = JSON.parse(localStorage.getItem('loginResponse'));
                    var maPhong = loginResponse?.user?.maPhong; // Lấy mã phòng từ loginResponse

                    var modal = $(this);
                    modal.find('#recipient-name').val(maPhong); // Điền mã phòng vào input Phòng
                });

                // Sử dụng .off() để đảm bảo sự kiện click chỉ được gán một lần
                $('.modal-footer .btn-primary').off('click').on('click', function () {
                    var maPhong = $('#recipient-name').val(); // Lấy giá trị mã phòng từ input
                    var moTa = $('#message-text').val(); // Lấy giá trị mô tả từ textarea

                    if (!maPhong || !moTa) {
                        alert('Vui lòng điền đầy đủ thông tin.');
                        return;
                    }

                    var loginResponse = JSON.parse(localStorage.getItem('loginResponse'));

                    $.ajax({
                        url: 'https://localhost:7298/api/FeedBacks/CreateFeedback',
                        type: 'POST',
                        contentType: 'application/json',
                        headers: {
                            'Authorization': 'Bearer ' + loginResponse.token
                        },
                        data: JSON.stringify({
                            maPhong: maPhong, // Truyền mã phòng vào request
                            moTa: moTa // Truyền mô tả vào request
                        }),
                        success: function (response) {
                            if (response.isSuccess) {
                                // Đóng exampleModal
                                $('#exampleModal').modal('hide');
                                // Hiển thị successModal
                                $('#successModal').modal('show');

                                // Sự kiện nhấn vào nút "Ok" trong successModal
                                $('#successModal .btn-primary').off('click').on('click', function () {
                                    location.reload(); // Tải lại trang khi nhấn Ok
                                });
                            } else {
                                alert('Không thể tạo phản hồi: ' + response.message);
                            }
                        },
                        error: function (xhr) {
                            alert('Đã xảy ra lỗi khi tạo phản hồi: ' + xhr.responseJSON.message);
                        }
                    });
                });







            });
        </script>




